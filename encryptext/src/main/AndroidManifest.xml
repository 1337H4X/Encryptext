<!--suppress AndroidLintUnusedResources -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bmoore.encryptext">

    <permission android:name="com.encryptext.CALL_SERVICE" />
    <uses-permission android:name="com.encryptext.CALL_SERVICE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:name="bmoore.encryptext.EncrypText" android:icon="@mipmap/icon" android:label="@string/app_name" android:theme="@style/AppTheme" android:allowBackup="false">

        <activity android:name="bmoore.encryptext.Main" android:label="@string/title_home_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="bmoore.encryptext.Conversation" android:label="@string/Title_Conversation_View"
            android:parentActivityName="bmoore.encryptext.Main" android:launchMode="singleTop">

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="bmoore.encryptext.Main"/>

        </activity>

        <service android:name="bmoore.encryptext.ReceiverSvc" android:exported="false"
            android:permission="bmoore.example.encryptext.CALL_SERVICE">
            <intent-filter>
                <action android:name="com.encryptext.ReceiverSvc" />
            </intent-filter>
        </service>

        <service android:name="bmoore.encryptext.SenderSvc" android:exported="false"
            android:permission="bmoore.example.encryptext.CALL_SERVICE">
            <intent-filter>
                <action android:name="com.encryptext.SenderSvc" />
            </intent-filter>
        </service>

        <receiver android:name="bmoore.encryptext.Receiver">
            <intent-filter>
                <action android:name="android.intent.action.DATA_SMS_RECEIVED" />
                <data android:host="localhost" android:scheme="sms" android:port="17117" />
            </intent-filter>
        </receiver>

        <receiver android:name="bmoore.encryptext.SendingStatus">
            <intent-filter>
                <action android:name="com.encryptext.PDU_SENT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
