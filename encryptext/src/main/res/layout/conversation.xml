<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <AutoCompleteTextView android:id="@+id/phone" android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:hint="@string/To" 
        android:ems="10" android:completionThreshold="1" 
        android:layout_alignParentLeft="true" android:layout_alignParentTop="true" 
        android:layout_alignParentRight="true" />
    
    <Button android:id="@+id/Send" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/Send"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick="@string/Send_Message" />

    <ListView android:id="@android:id/list"
              android:visibility="visible"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:stackFromBottom="true"
              android:transcriptMode="alwaysScroll"
              android:layout_above="@+id/Send"
              android:layout_below="@+id/phone"
              android:layout_centerHorizontal="true" />

    <EditText android:id="@+id/message"
              android:nextFocusLeft="@+id/phone"
              android:nextFocusUp="@+id/phone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/Type_Message"
              android:ems="10"
              android:layout_toLeftOf="@+id/Send"
              android:layout_alignParentLeft="true"
              android:layout_alignParentBottom="true"
              android:inputType="textCapSentences|textAutoCorrect" />
</RelativeLayout>